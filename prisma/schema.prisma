model ImageURL {
  id Int @id @default(autoincrement()) @unique
  title String?
  url String
  createdAt DateTime @default(now())
}

model ProductStatus {
  id Int @id @default(autoincrement()) @unique
  status String
}

model ShoppingCart {
  id Int @id @default(autoincrement()) @unique
}